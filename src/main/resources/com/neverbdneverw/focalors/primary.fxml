                                       <font>
                                          <Font name="Segoe UI" size="16.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                           </graphic>
                           <font>
                              <Font name="Segoe UI" size="16.0" />
                           </font>
                        </Button>
                        <Button fx:id="settingButton" mnemonicParsing="false" onAction="#handleSettingButtonEvent" textFill="WHITE">
